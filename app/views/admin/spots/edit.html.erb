
<div class="container">
 <h6 class="text-center"><strong>スポット編集</strong></h6>
  <%= form_with model: @spot, url: admin_spot_path(@spot.id), method: :patch do |f| %>

  <div class="form-group">
   <%= f.label "スポット画像" %>
   <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
   <%= f.label "ジャンル名"%>
   <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name) %>
  </div>

  <div class="form-group">
   <%= f.label "都道府県"%>
   <%= f.collection_select(:prefectures_id, Prefecture.all, :id, :prefecture_name) %>
  </div>

  <div class="form-group">
   <%= f.label "スポット名"%>
   <%= f.text_field :spot_name%>
  </div>

  <div class="form-group">
   <%= f.label "住所" %>
   <%= f.text_area :address, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label "アクセス" %>
   <%= f.text_field :access, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label "電話番号" %>
   <%= f.text_field :telephone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label "URL" %>
   <%= f.text_field :url, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label "参考情報" %>
   <%= f.text_area :facility, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label "営業時間" %>
   <%= f.text_area :business_day, class: 'form-control' %>
  </div>

  <div class="actions">
   <%= f.submit "変更を保存", class:"btn btn-success ms-3" %>
  </div>
  <% end %>
</div>