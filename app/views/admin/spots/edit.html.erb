<html>
<body>
<head>
<title>スポット編集</title>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
</head>
</body>
<div class="container">
<h6 class="text-center">スポット編集</h6>

<%= form_with model: @spot, url: admin_spots_path(@spot.id), method: :patch do |f| %>

<div class="form-group">
  <%= f.label "スポット画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.label "ジャンル名"%>
  <%= f.text_field :genre_id %>
</div>

<div class="form-group">
  <%= f.label "スポット名"%>
  <%= f.text_field :spot_name%>
</div>

<div class="form-group">
  <%= f.label "住所" %>
  <%= f.text_area :address, class: 'form-control' %>
</div>

<div class="form-group">
 <%= f.label "アクセス" %>
  <%= f.text_field :access, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label "電話番号" %>
  <%= f.text_field :telephone_number, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label "URL" %>
  <%= f.text_field :url, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label "設備" %>
  <%= f.text_area :facility, class: 'form-control' %>
</div>


<div class="form-group">
  <%= f.label "営業時間" %>
  <%= f.text_area :opening_hours, class: 'form-control' %>
</div>


<div class="actions">
  <%= f.submit "変更を保存", class:"btn btn-success ms-3" %>
</div>
<% end %>
</div>