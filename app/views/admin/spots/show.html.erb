
<div class="spot-container">
  <div class ="row">
    <div class="col-md-4">
       <% if @spot.image.attached? %>
           <%= image_tag @spot.image, size: "500x400" %>
       <% else %>
           <%= image_tag 'no_image', size: "500x400" %>
       <% end %>
    </div>
    <div class="col-md-8">
    <table>
     <tr>
      <td nowrap>【スポット名】</td>
      <td><%= @spot.spot_name %></td>
     </tr>
     <tr>
      <td nowrap>【都道府県】</td>
      <td><%= @spot.prefectures_id %></td>
     </tr>
     <tr>
      <td nowrap>【ジャンル】</th>
      <td><%= @spot.genre_id %></td>
     </tr>
     <tr>
      <td nowrap>【住所】</td>
      <td><%= @spot.address %></td>
     </tr>
     <tr>
      <td nowrap>【電話番号】</td>
      <td><%= @spot.telephone_number %></td>
     </tr>
     <tr>
      <td nowrap>【参考情報】</td>
      <td><%= @spot.facility %></td>
     </tr>
     <tr>
      <td nowrap>【URL】</td>
      <td><%= link_to @spot.url, "#{@spot.url}" %></td>
     </tr>
     <tr>
      <td nowrap>【アクセス】</td>
      <td><%= @spot.access %></td>
     </tr>
     <tr>
      <td nowrap>【営業時間】</td>
      <td><%= @spot.business_day %></td>
     </tr>
    </table>
       <%= link_to "編集する", edit_admin_spot_path, :class => "btn btn-success ms-3" %>
       <%= link_to "削除する", admin_spot_path, class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>