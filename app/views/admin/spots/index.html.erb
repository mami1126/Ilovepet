
<div class="container">

    <td>スポット一覧</td>
    <%=link_to '/admin/spots/new',method: :get do %>
    <i class="fa-solid fa-plus"></i>
    <% end %>
 <table class="table">
  <thead class="table-info">

    <tr>
      <th>スポット名</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <% @spot.each do |spot| %>
    <tr>

      <td><%= link_to spot.spot_name, admin_spot_path(spot) %></td>

      <td><%= spot.address %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @spot %>

</div>