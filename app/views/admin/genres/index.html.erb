<% if @genre.errors.any? %>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
<% end %>

<h3 class="text-center">ジャンル一覧・追加</h3>
<div class="container">

  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
    <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
    <td><%= f.text_field :genre_name, class: "mr-5" %></td>
    <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>

  <% end %>

    <table class="table table-bordered">
     <thead>
      <tr>
       <th scope="col">ジャンル名</th>
       <th scope="col"></th>
      </tr>
     </thead>
     <% @genres.each do |genre| %>
      <tbody>
       <tr>
        <td><%= genre.genre_name %></td>
        <!--<td><%#= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-success" %></td>-->
        <td><%= link_to "削除", admin_genre_path(genre.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       </tr>
      </tbody>
     <% end %>
    </table>
</div>