<div class="container">
  <div class="row">
    <h4><strong>スポット一覧<%= @spots.count %>件</strong></h4>
  </div>
  <div class ="row">
    <i class="fa-solid fa-magnifying-glass"></i><h6>検索</h6>
  </div>

    
    <%= search_form_for @q do |f| %>
    <div class="form-group row">
      <div class="col-sm-6">
		   <label><%= f.label :genre_id, 'ジャンル' %></label>
		    <%= f.collection_select(:genre_id_eq, Genre.all, :id, :genre_name) %>
  	  </div>
	    <div class="col-sm-6">
		   <label><%= f.label :prefecture_id, '都道府県' %></label>
		    <%= f.collection_select(:prefectures_id_eq, @prefectures, :id, :prefecture_name) %>
	    </div>
	    <div align="center">
	      <%= f.submit 'この条件で検索する' ,class: "btn btn-success my-3"%>
	    </div>
    </div>
    <% end %>





  <div class="row">
    <% @spots.each do |spot| %>
      <div class="col-md-3">
        <%= link_to spot.spot_name.truncate(15), spot_path(spot) %>
        <% if !spot.favorites.exists?(customer_id: current_customer.id) %>
          <%= link_to spot_favorites_path(spot.id), method: :post do %>
            <i class="far fa-heart like-btn" ></i>
          <% end %>
        <% else %>
          <%= link_to spot_favorites_path(spot.id), method: :delete do %>
            <i class="fas fa-heart unlike-btn"></i>
          <% end %>
        <% end %>
        <br />
        <% if spot.image.attached? %>
           <%= image_tag spot.image, size: "250x200" %>
        <% else %>
           <%= image_tag 'no_image', size: "250x200" %>
        <% end %>
        <br />
        <div id="star-<%= spot.id %>"></div>
        <script>
         $(document).on('turbolinks:load', function() {
          let elem = document.querySelector('#star-<%=spot.id %>');
          if (elem == null) return;

         elem.innerHTML = ""
          let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          readOnly:true,
          score: "<%= spot.comments.average(:rate) %>"
          };
          raty(elem, opt);
          });
        </script>
        <p><%= link_to "#{spot.comments.count} コメント", spot_comments_path(spot.id) %></p>
        <%= spot.address %>
      </div>
     <% end %>
  </div>

  <div class='p-top__paginate'><%= paginate @spots %></div>

</div>
