<%= search_form_for @q do |f| %>

 <%= f.label :genre_id, 'ジャンル' %>
 <%= f.collection_select(:genre_id_eq, Genre.all, :id, :genre_name) %>

 <%= f.label :prefecture_id, '都道府県' %>
 <%= f.collection_select(:prefectures_id_eq, @prefectures, :id, :prefecture_name) %>
 <%#= f.collection_select :prefecture_id_eq, @prefectures, :id, include_blank: '指定なし' %>
 <%= f.submit %>
<% end %>


 <div class="container">
   <div class="row row-cols-1 row-cols-md-3 g-3">
    <% @spots.each do |spot| %>
      <%= link_to spot.spot_name, spot_path(spot) %>
      <%#= image_tag spot.image, size: "300x200" %>
      <%= spot.address %>
     <td></td>
     <% end %>
    </div>
 </div>
  

  
   
</div>
