 
 <%= form_with(model: @customer, url: customer_registration_path) do |f| %>
 <div class = "registration-new-container">
  <div class="field">
  <% if @customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= @customer.errors.count %> 件のエラーが発生しました</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="card">
  <article class="card-body">
    <h4 class="card-title text-center mb-4 mt-1">新規会員登録</h4>
    <hr>
    <form>
    <div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        <%= f.text_field :name, placeholder: "ニックネーム", autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    </div>


    <div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
         </div>
        <%= f.password_field :password, placeholder: "パスワード（6文字以上)", autocomplete: "new-password", class: 'form-control' %>
    </div>
    </div>
    <div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
         </div>
        <%= f.password_field :password_confirmation, placeholder: "パスワード（確認)", autocomplete: "new-password", class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">登録</button>
    </div>
    <p class="text-center"><%= link_to "既に会員済みの方はこちら", new_customer_session_path %>
    </form>
  </article>
  </div>
 <% end %>
  </div>
 </div>





